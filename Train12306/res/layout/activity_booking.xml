<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#00ff00"
        android:text="车票预订"
        android:textColor="#ffff00"
        android:textSize="48sp" />
  
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
    	    android:id="@+id/edit_start"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:layout_gravity="left"
    	    android:layout_weight="0.93"
    	    android:background="#ffffff"
    	    android:hint=" 起 点 "
    	    android:textSize="30sp" />

          
        
        <ImageView
            android:id="@+id/image_jiantou"
            android:layout_width="95dp"
            android:layout_height="69dp"
            android:layout_weight="1.89"
            android:src="@drawable/jiantou" />
        
    	<EditText
    	    android:id="@+id/edit_end"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:layout_gravity="right"
    	    android:layout_weight="1.00"
    	    android:background="#ffffff"
    	    android:hint=" 终 点 "
    	    android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    	<TextView 
        	android:id="@+id/zuo"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="3"  
        	android:text="------------------------"/>   
          
     	<TextView 
        	android:id="@+id/zhong"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"  
        	android:gravity="center"
        	android:text="欢迎来到铁路12306系统！"/>        
        
      	<TextView 
        	android:id="@+id/you"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="3"  
        	android:text="------------------------"/> 
        </LinearLayout>
      
    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#55ffff"
        android:text="   查   询    "
        android:textColor="#fff"
        android:textSize="24sp" />
    
    <TextView
        android:id="@+id/liebiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="车次,	起点,	终点,	票数,	票价:"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="96dp" >

        <TextView
            android:id="@+id/response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/btnbuyticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#999999"
        android:text="  购   票   "
        android:textColor="#990000"
        android:textSize="20sp" />
    
    <ImageView
	    android:id="@+id/image_train0"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:layout_weight="1"
	    android:src="@drawable/train0" />

</LinearLayout>